execute pathogen#infect()
syntax on
filetype plugin indent on
nnoremap <leader>v <Plug>TaskList
set showmatch
"Turn on line numbers
set nu
"Formally set tab and indent related functionality
""""""""""""""""""""""""""""""""""""""""""""""""""
" Use spaces instead of tabs
set expandtab

" Be smart when using tabs ;)
set smarttab

" 1 tab == 4 spaces
set shiftwidth=4
set tabstop=4

" Linebreak on 500 characters
set lbr
set tw=500

set ai "Auto indent
set si "Smart indent
set wrap "Wrap lines

